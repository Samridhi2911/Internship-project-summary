<!DOCTYPE html>
<html>
<head>
  <title>User Profiles</title>
  <link rel="stylesheet" href="/css/manager-style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="manager-dashboard-wrapper">
    <h2 class="dashboard-heading">User Profiles</h2>
    <p class="dashboard-sub">Below are the registered users fetched from the database.</p>

    <% if (users.length === 0) { %>
      <p class="no-users-msg">No users found.</p>
    <% } %>

    <div class="user-grid">
      <% users.forEach(user => { %>
        <div class="user-card">
          <h3><%= user.name %> <span class="gender-badge"><%= user.gender %></span></h3>
          <p><strong>Caste:</strong> <%= user.caste %></p>
          <p><strong>Religion:</strong> <%= user.religion %></p>
          <p><strong>Status:</strong> <span class="status <%= user.status %>"><%= user.status %></span></p>
          <a href="/manager/users/<%= user.id %>" class="view-btn">ğŸ” View Profile</a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
